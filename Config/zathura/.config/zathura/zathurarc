# ~/.config/zathura/zathurarc

# Incluir configuración de colores del tema Catppuccin Latte (interfaz clara)
include "catppuccin-latte"
#include "dracula"

# Backend de la base de datos
set database-backend sqlite

# Habilitar Synctex para documentos LaTeX
set synctex true

# Configuración de desplazamiento
set scroll-hstep 40
set scroll-step 40
#set smooth-scroll "true"
set scroll-page-aware true
set scroll-full-overlap 0.01
set window-title-basename "true"
set selection-clipboard "clipboard"

# Ajustar el documento al ancho de la ventana al abrir
set adjust-open best-fit

# Ocultar el cursor cuando no se utiliza
set cursor-hide true

# Habilitar búsqueda incremental
set incremental-search true

# Nivel de zoom predeterminado y mínimo
set zoom 1.2
set zoom-min 10

# Personalizar la fuente y el tamaño del texto en la barra de estado
set font "CaskaydiaCove Nerd Font Mono 8"

# Atajos de teclado personalizados
map <C-d> scroll down
map <C-u> scroll up
map <C-f> scroll right
map <C-b> scroll left
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen

# Configuración de visualización
set pages-per-row 1
set presentation false

# Configuración de la barra de estado
set statusbar-h-padding 0
set statusbar-v-padding 0

# Espaciado entre páginas
set page-padding 1

set recolor true
#set recolor-lightcolor          rgba(40,42,54,1)      # Background
#set recolor-darkcolor           rgba(248,248,242,1)   # Foreground

